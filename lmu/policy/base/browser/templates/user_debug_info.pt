<tal:doctype xmlns:tal="http://xml.zope.org/namespaces/tal"
             tal:define="omit view/omit"
             tal:condition="not:omit" >
<!DOCTYPE html >
</tal:doctype>

<html xmlns="http://www.w3.org/1999/xhtml" xml:lang="en"
      xmlns:tal="http://xml.zope.org/namespaces/tal"
      xmlns:i18n="http://xml.zope.org/namespaces/i18n"
      i18n:domain="lmu.policy.base"
      lang="en"
      tal:define="omit view/omit"
      tal:omit-tag="omit" >
<head tal:condition="not:omit">

</head>
<body tal:omit-tag="omit" >
    <div id="user" >
        <h1>Relevant Request </h1>
        <table>
            <tr>
                <th>Env</th>
                <td tal:content="view/request"></td>
        </table>
        <h1>User</h1>
        <table>
            <tr>
                <th>username</th>
                <td tal:content="view/user/username">username</td>
            </tr>
            <tr>
                <th>fullname</th>
                <td tal:content="view/user/fullname">username</td>
            </tr>
            <tr>
                <th>description</th>
                <td tal:content="view/user/description">description</td>
            </tr>
            <tr>
                <th>email</th>
                <td tal:content="view/user/email">email</td>
            </tr>
        </table>
        <h1>Raw Request</h1>
        <span tal:content="structure view/request">request</span>
    </div>
</body>
</html>
